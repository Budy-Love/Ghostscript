{
    "name": "gravitymedia/ghostscript",
    "description": "Object oriented Ghostscript processing library for PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel SchrÃ¶der",
            "email": "daniel.schroeder@gravitymedia.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "symfony/process": "^2.8"
    },
    "require-dev": {
        "phing/phing": "^2.13",
        "phpunit/phpunit": "^4.8",
        "sami/sami": "^3.1",
        "symfony/finder": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "GravityMedia\\Ghostscript\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GravityMedia\\GhostscriptTest\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phing test",
        "doc": "php vendor/bin/phing doc"
    },
    "archive": {
        "exclude": [
            "/.*",
            "/*.php",
            "/build.*",
            "/composer.*",
            "/coverage.*",
            "/phpunit.*",
            "/tests"
        ]
    }
}
